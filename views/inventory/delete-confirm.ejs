<h1>
  <%= title %>
</h1>

<%- messages() %>

  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error=> { %>
        <li>
          <%= error.msg %>
        </li>
        <% }) %>
    </ul>
    <% } %>

      <div class="form-container">
        <form id="deleteForm" action="/inv/delete" method="post">
          <div class="form-content">
            <p class="form-notice"><strong>Confirm Deletion - The delete is permanent.</strong></p>

            <label for="inv_make">Make</label>
            <input type="text" id="inv_make" name="inv_make" readonly
              value="<%= locals.inv_make ? locals.inv_make : '' %>">

            <label for="inv_model">Model</label>
            <input type="text" id="inv_model" name="inv_model" readonly
              value="<%= locals.inv_model ? locals.inv_model : '' %>">

            <label for="inv_year">Year</label>
            <input type="text" id="inv_year" name="inv_year" readonly
              value="<%= locals.inv_year ? locals.inv_year : '' %>">

            <label for="inv_price">Price</label>
            <input type="text" id="inv_price" name="inv_price" readonly
              value="$<%= locals.inv_price ? new Intl.NumberFormat('en-US').format(locals.inv_price) : '' %>">

            <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">

            <button type="submit" class="form-btn delete-btn">Delete Vehicle</button>
          </div>
        </form>
      </div>